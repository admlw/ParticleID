<!-- Project details -->
<!DOCTYPE project [
<!ENTITY name "PIDanalyser_MCtwotr_v0">
<!ENTITY user "kduffy">
]>

<project name="&name;">

  <!-- Group -->
  <group>uboone</group>

  <!-- Project size (numevents is an upper limit) -->
  <numevents>50</numevents> <!-- 200000 -->
  <numjobs>10</numjobs> <!-- 4000 -->
  <maxfilesperjob>1</maxfilesperjob>

  <!-- Where to look for fcl files (in addition to $FHICL_FILE_PATH) -->
  <fcldir>/pnfs/uboone/persistent/users/kduffy/PID/fcl/</fcldir>

  <!-- Batch OS -->
  <os>SL6</os>

  <!-- Larsoft information -->
  <larsoft>
    <local>/pnfs/uboone/persistent/users/kduffy/PID/local.tar</local>
  </larsoft>

  <!-- Stages -->
  <stage name = "analyze">
    <maxfilesperjob>1</maxfilesperjob>
    <schema>root</schema>
    <inputdef>kduffy_prodgenie_bnb_nu_cosmic_uboone_mcc8.7_reco2_dev_twotrfilter_1000files</inputdef>
    <fcl>run_particle_identification_analyzer_notlibos.fcl</fcl>
    <outdir>/pnfs/uboone/scratch/users/kduffy/PID/&name;/out/</outdir>
    <logdir>/pnfs/uboone/scratch/users/kduffy/PID/&name;/log/</logdir>
    <workdir>/pnfs/uboone/scratch/users/kduffy/PID/&name;/work/</workdir>
    <memory>8000</memory>
    <jobsub>--disk=70GB</jobsub>
  </stage>
</project>
